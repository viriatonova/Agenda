<%- include('includes/head'); %>

    <main class="w-full h-full flex justify-center items-center">
        <section class="form-geral">
            <h2 class="titles">Register</h2>
            <p class="py-2 text-lg text-gray-600 font-light tracking-wide">
                this agenda is version beta, your account will be 
                remember just for seven days. 
            </p>
            <%- include('includes/menssages'); %>
            <form id="form-register" class="w-full h-full mt-4 flex flex-col justify-center" action="/register" method="post">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <label class="ml-2" for="nome">Nome</label>
                <input class="form-input mt-px px-3" type="text" name="nome" placeholder="Ex: David Hume">
                <label class="mt-4 ml-2" for="email">E-mail</label>
                <input class="form-input mt-px px-3" type="text" name="email" placeholder="Ex: youremail@mail.com">
                <label class="mt-4 ml-2" for="password">Password</label>
                <input class="form-input mt-px px-3" type="password" name="password">
                <button type="submit" class="w-full h-full mt-8 py-2 form-buttom">Sign up</button>
            </form>
            <div class="w-full mt-4 flex justify-center">
                <p>Do you have account?</p>
                <a class="ml-2 font-bold" href="/login">Sign in</a>
            </div>
        </section>
    </main>
    
<%- include('includes/footer'); %>