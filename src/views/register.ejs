<%- include('includes/head'); %>

    <main class="w-full h-full flex justify-center items-center">
        <section class="w-1/2 h-full mt-8 px-12">
            <h2 class="py-2 text-5xl text-pink-600 font-bold tracking-wider">Register</h2>
            <p class="py-2 text-lg text-gray-600 font-light tracking-wide">
                this agenda is version beta, your account will be 
                remember just for seven days. 
            </p>
            <form class="w-full h-full mt-4 flex flex-col justify-center" action="/register" method="post">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <label class="ml-2" for="registername">Nome</label>
                <input class="form-input mt-px px-3" type="text" name="registername" placeholder="Ex: JoÃ£o Silva">
                <label class="mt-4 ml-2" for="email">E-mail</label>
                <input class="form-input mt-px px-3" type="text" name="registeremail" placeholder="Ex: seuemail@mail.com">
                <label class="mt-4 ml-2" for="registerpassword">Password</label>
                <input class="form-input mt-px px-3" type="password" name="registerpassword">
                <button type="submit" class="w-full h-full mt-8 py-2 bg-green-700 rounded-lg text-white hover:bg-green-900 active:bg-pink-700">Sing up</button>
            </form>
            <div class="w-full mt-4 flex justify-center">
                <p>Do you have account?</p>
                <a class="ml-2 font-bold" href="/login">Sing in</a>
            </div>
        </section>
