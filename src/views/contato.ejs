<%- include('includes/head'); %>

    <main class="w-full h-full flex justify-center items-center">
        <section class="form-geral">

            <% if (contato._id) { %> 
                <h2 class="titles">Edit your Contact</h2>
            <% } else { %>
                <h2 class="titles">Create your Contacts</h2>
            <% } %> 

            <%- include('includes/menssages'); %>
            <% if (contato._id) { %> 
            <form id="form-contato" class="w-full h-full mt-4 flex flex-col justify-center" action="/contato/edit/<%= contato._id  %> " method="post">
            <% } else { %>
            <form id="form-contato" class="w-full h-full mt-4 flex flex-col justify-center" action="/contato/register" method="post">
            <% } %>  
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <label class="simpletext mt-2 ml-2" for="nome">First name</label>
                <input value="<%= contato.nome %>" class="form-input mt-px px-3" type="text" name="nome" placeholder="Ex: Friedrich">
                <label class="simpletext mt-2 ml-2" for="sobrenome">Second name</label>
                <input value="<%= contato.sobrenome %> " class="form-input mt-px px-3" type="text" name="sobrenome" placeholder="Ex: Nietzsche">
                <label class="simpletext mt-2 ml-2" for="phone" >Phone number</label>
                <input value="<%= contato.phone %>" class="form-input mt-px px-3" type="tel" name="phone" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" placeholder="Ex: 88 95522 5544">
                <label class="simpletext mt-2 ml-2" for="email">E-mail</label>
                <input value="<%= contato.email %>" class="form-input mt-px px-3" type="text" name="email" placeholder="Ex: email@email.com">
                <label class="simpletext mt-2 ml-2" for="description">Description</label>
                <input value="<%= contato.description %>" class="form-input mt-px px-3" type="text" name="description" 
                placeholder="Ex: description here" rows="4" cols="50" name="comment" form="form-contato"
                >
                <% if (contato._id) { %> 
                    <button class="w-full h-full mt-8 py-2 form-buttom">Edit</button>
                <% } else { %>
                    <button class="w-full h-full mt-8 py-2 form-buttom">Submit</button>
                <% } %>  
            </form>
        </section>
    </main>
    
<%- include('includes/footer'); %>