<%- include('includes/head'); %>

    <main class="flex flex-col p-2 sm:py-6 sm:px-8">

        <section class="w-full h-auto mt-2 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-2 grid-flow-cols-dense" >
            <% contatos.forEach(contato => { %> 
                <article class="card w-full h-full">
                    <div class="flex">
                        <span class="material-icons">perm_identity</span>
                        <h3 class="ml-4"><%= `${contato.nome} ${contato.sobrenome}` %> </h3>
                    </div>
                    <div class="flex">
                        <span class="material-icons">phone</span>
                        <p class="ml-4"><%= contato.phone %></p>
                    </div>
                    <div class="flex">
                        <span class="material-icons">email</span>
                        <p class="ml-4"><%= contato.email %></p>
                    </div>
                    <div class="flex">
                        <span class="material-icons">subject</span>
                        <p class="ml-4"><%= contato.description %></p>
                    </div>
                    <footer class="w-full h-full flex items-end justify-start space-x-1">
                        <span class="w-2/3 justify-self-start text-gray-700">
                            <%= contato.create.toLocaleDateString('pt-BR', {weekday: 'long', day:'numeric', month:'numeric', year:'numeric'}) %>
                        </span>
                        <div class="w-1/3 flex justify-end items-end">
                            <button class="edit-contact material-icons p-2 text-gray-500">edit</button>
                            <button class="edit-contact material-icons p-2 text-gray-500">clear</button>
                        </div>
                    </footer>
                </article>
            <%  });  %> 
        </section>

    </main>
    
<%- include('includes/footer'); %>